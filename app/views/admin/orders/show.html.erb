<div class="container">
  <div class="row">
    <h2>注文履歴詳細</h2>
  </div>
  <div class="row">
    <table class="table table-borderless">
      <tr>
        <th>購入者</th>
        <th><%= @order.customer.full_name %></th>
      </tr>
      <tr>
        <th>注文日</th>
        <th><%= @order.created_at.strftime('%Y/%m/%d') %></th>
      </tr>
      <tr>
        <th>配送先</th>
        <th>〒<%= @order.postal_code%> <%= @order.address %><br><%= @order.name %></th>
      </tr>
      <tr>
        <th>支払方法</th>
        <th><%= @order.payment_method_i18n %></th>
      </tr>
    </table>
  </div>
  <div class="row">
    <div class="col-md-8">
      <table class="table">
        <thaed>
          <tr class="bg-light">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thaed>
        <tbody>
          <% @order.order_details.all.each do |order_details| %>
            <tr>
              <td><%= order_details.item.name %></td>
              <td><%= order_details.price %></td>
              <td><%= order_details.amount %></td>
              <td><%= order_details.price * order_details.amount %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3">
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= @order.order_details.inject(0) { |sum, item| sum + item.sum_of_price }.floor %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.postage %>円</td>
        </tr>
        <tr>
          <th>請求合計額</th>
          <th><%= @order.order_details.inject(0) { |sum, item| sum + item.sum_of_price }.floor + @order.postage %></th>
        </tr>
      </table>
    </div>
  </div>
</div>