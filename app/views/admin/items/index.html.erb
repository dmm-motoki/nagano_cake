<div class="container">
  <div class="row justify-content-between my-4">
    <h2 class="bg-light px-5">商品一覧</h2>
    <%= link_to new_admin_item_path do %>
      <button type="button" class="btn btn-light rounded-circle p-0" style="width:3rem;height:3rem;">＋</button>
    <% end %>
  </div>

  <table class="table table-lg">
    <thead class="bg-light">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |items| %>
        <tr>
          <td><%= items.id %></td>
          <td><%= link_to items.name, admin_item_path(items.id), class: "text-dark" %></td>
          <td><%= items.price %></td>
          <td><%= items.genre.name %></td>
          <td>
            <% if items.is_active == true %>
              <p class="text-success font-weight-bold">販売中</p>
            <% else %>
              <p class="text-muted font-weight-bold">販売停止中</p>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>