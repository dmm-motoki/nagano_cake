<div class="container">
  <div class="row my-5">
    <h2 class="px-4 bg-light">商品編集</h2>
  </div>
  <div class="row">
    <div class="col-md-10">
      <%= form_with model: @item, url: admin_item_path do |f| %>
        <table class="table table-borderless">
          <tr>
            <th class="pl-5">商品画像</th>
            <th><%= f.file_field :image, accept: "image/*" %></th>
          </tr>
          <tr>
            <th class="pl-5">商品名</th>
            <th><%= f.text_field :name, class: "form-control w-75" %></th>
          </tr>
          <tr>
            <th class="pl-5">商品説明</th>
            <th><%= f.text_area :introduction, class: "form-control w-75" %></th>
          </tr>
          <tr>
            <th class="pl-5">ジャンル</th>
            <th><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください", class: "form-control w-75" %></th>
          </tr>
          <tr>
            <th class="pl-5">税抜価格</th>
            <th><%= f.text_field :price, class: "form-control w-75" %></th>
          </tr>
          <tr>
            <th class="pl-5">販売ステータス</th>
            <th>
              <%= f.radio_button :is_active, true %>
              <%= f.label :販売中 %>
              <%= f.radio_button :is_active, false, class: "ml-4" %>
              <%= f.label :販売停止中 %>
            </th>
          </tr>
        </table>
        <div class="row justify-content-center">
          <%= f.submit "変更を保存", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
