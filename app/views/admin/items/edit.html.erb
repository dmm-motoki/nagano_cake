<div class="container">
  <div class="row">
    <h2>商品編集</h2>
  </div>
  <div class="row">
    <%= form_with model: @item, url: admin_item_path do |f| %>
      <table>
        <tr>
          <th>商品画像</th>
          <th><%= f.file_field :image, accept: "image/*" %></th>
        </tr>
        <tr>
          <th>商品名</th>
          <th><%= f.text_field :name %></th>
        </tr>
        <tr>
          <th>商品説明</th>
          <th><%= f.text_area :introduction %></th>
        </tr>
        <tr>
          <th>ジャンル</th>
          <th><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %></th>
        </tr>
        <tr>
          <th>税抜価格</th>
          <th><%= f.text_field :price %>円</th>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <th>
            <%= f.radio_button :is_active, true %>
            <%= f.label :販売中 %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :販売停止中 %>
          </th>
        </tr>
      </table>
      <%= f.submit "変更を保存" %>
    <% end %>
  </div>
</div>
