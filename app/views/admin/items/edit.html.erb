<div class="container">
  <div class="row">
    <h2>商品編集</h2>
      <%= form_with model: @item, url: admin_item_path do |f| %>
        <div>
          <%= f.label :商品画像 %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div>
          <%= f.label :商品名 %>
          <%= f.text_field :name %>
        </div>
        <div>
          <%= f.label :商品説明 %>
          <%= f.text_area :introduction %>
        </div>
        <div>
          <%= f.label :ジャンル %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %>
        </div>
        <div>
          <%= f.label :税抜価格 %>
          <%= f.text_field :price %>円
        </div>
        <%= f.hidden_field :is_active, :value => true %>
        <div>
          <%= f.submit "変更を保存" %>
        </div>
      <% end %>
    </div>
</div>
