<div class="container">
  <h2 class="mt-3">ジャンル編集</h2>
  <div class="row">
    <%= form_with model: @genre, url: admin_genre_path do |f| %>
      <%= f.label :ジャンル名 %>
      <%= f.text_field :name, class: "mx-5 my-5" %>
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    <% end %>
  </div>
</div>