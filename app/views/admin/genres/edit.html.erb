<div class="container">
  <div class="row mt-5">
    <h2 class="bg-light px-5">ジャンル編集</h2>
  </div>
  <div class="row">
    <%= form_with model: @genre, url: admin_genre_path do |f| %>
      <%= f.label :ジャンル名, class: "font-weight-bold" %>
      <%= f.text_field :name, class: "mx-5 my-5" %>
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    <% end %>
  </div>
</div>