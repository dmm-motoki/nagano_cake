<h2>ジャンル一覧・追加</h2>
<%= form_with url: admin_genres_path do |f| %>
  <p>ジャンル名</p>
  <%= f.text_field :name %>
  <%= f.submit "新規登録" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genres| %>
      <tr>
        <td><%= genres.name %></td>
        <td>編集する</td>
      </tr>
    <% end %>
  </tbody>
</table>