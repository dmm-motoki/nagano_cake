<div class="container">
  <div class="row my-4">
    <h2 class="bg-light px-4">注文履歴一覧</h2>
  </div>
  <div class="row">
    <table class="table table-md">
      <thead class="bg-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |orders| %>
          <tr>
            <th><%= link_to orders.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(orders.id), class: "text-dark" %></th>
            <th><%= orders.customer.full_name %></th>
            <th><%= orders.order_details.inject(0) { |sum, item| sum + item.amount } %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
