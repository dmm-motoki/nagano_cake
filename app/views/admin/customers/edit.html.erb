<div class="container">
  <div class="row my-5">
    <h2 class="bg-light px-5"><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>
  </div>
  <div class="row">
      <%= form_with model: @customer, url: admin_customer_path do |f| %>
        <table class="table table-borderless mx-5">
          <tr>
            <th>会員ID</th>
            <th><p class="ml-5"><%= @customer.id %></p></th>
          </tr>
          <tr>
            <th>氏名</th>
            <th>
              <div class="form-row ml-4">
                <div class="col-md-5">
                  <%= f.text_field :last_name, class: "form-control" %>
                </div>
                <div class="col-md-5 ml-4">
                  <%= f.text_field :first_name, class: "form-control" %>
                </div>
              </div>
            </th>
          </tr>
          <tr>
            <th>フリガナ</th>
            <th>
              <div class="form-row ml-4">
                <div class="col-md-5">
                  <%= f.text_field :last_name_kana, class: "form-control" %>
                </div>
                <div class="col-md-5 ml-4">
                  <%= f.text_field :first_name_kana, class: "form-control" %>
                </div>
              </div>
            </th>
          </tr>
          <tr>
            <th>郵便番号</th>
            <th>
              <div class="form-row ml-4">
                <div class="col-md-5">
                  <%= f.text_field :postal_code, class: "form-control" %>
                </div>
              </div>
            </th>
          </tr>
          <tr>
            <th>住所</th>
            <th>
              <div class="form-row ml-4">
                <div class="col-md-12">
                  <%= f.text_field :address, class: "form-control" %>
                </div>
              </div>
            </th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th>
              <div class="form-row ml-4">
                <div class="col-md-5">
                  <%= f.text_field :telephone_number, class: "form-control" %>
                </div>
              </th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th>
              <div class="form-row ml-4">
                <div class="col-md-5">
                  <%= f.text_field :email, class: "form-control" %>
                </div>
              </div>
            </th>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <th>
              <%= f.radio_button :is_active, true, class: "ml-4" %>
              <%= f.label :is_active, '有効' %>
              <%= f.radio_button :is_active, false, class: "ml-3" %>
              <%= f.label :is_active, '退会' %>
            </th>
          </tr>
          <tr>
            <th></th>
            <th><%= f.submit "変更を保存", class: "btn btn-success btn-lg px-4 mt-3" %></th>
          </tr>
        </table>
      <% end %>
  </div>
</div>