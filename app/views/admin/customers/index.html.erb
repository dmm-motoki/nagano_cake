<div class="container">
  <div class="row mt-5">
    <h2 class="bg-light px-5">会員一覧</h2>
  </div>
  <div class="row mt-2 justify-content-center">
    <table class="table table-md col-md-9">
      <thead class="bg-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customers| %>
          <tr>
            <td><%= customers.id %></td>
            <td><%= link_to customers.last_name + customers.first_name, admin_customer_path(customers.id), class: "text-dark" %></td>
            <td><%= customers.email %></td>
            <td>
              <% if customers.is_active == true %>
                <p class="text-success font-weight-bold">有効</p>
              <% else %>
                <p class="text-muted font-weight-bold">退会</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>