<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid mx-0">
          <%= link_to "ながのCAKE", root_path, class: "navbar-brand font-weight-bold border border-secondary rounded-lg px-5" %>
          <ul class="navbar-nav">
            <% if admin_signed_in? %>
              <li class="nav-item"><%= link_to '商品一覧', admin_items_path, class: "btn btn-outline-secondary mx-3" %></li>
              <li class="nav-item"><%= link_to '会員一覧', admin_customers_path, class: "btn btn-outline-secondary mx-3" %></li>
              <li class="nav-item"><%= link_to '注文履歴一覧', admin_root_path, class: "btn btn-outline-secondary mx-3" %></li>
              <li class="nav-item"><%= link_to 'ジャンル一覧', admin_genres_path, class: "btn btn-outline-secondary mx-3" %></li>
              <li class="nav-item"><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "btn btn-outline-secondary mx-3" %></li>
            <% elsif customer_signed_in? %>
              <li class="nav-item"><%= link_to 'マイページ', customers_my_page_path, class: "btn btn-outline-secondary mx-3" %></li>
              <li class="nav-item"><%= link_to '商品一覧', items_path, class: "btn btn-outline-secondary mx-3" %></li>
              <li class="nav-item"><%= link_to 'カート', cart_items_path, class: "btn btn-outline-secondary mx-3" %></li>
              <li class="nav-item"><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: "btn btn-outline-secondary mx-3" %></li>
            <% else %>
              <li class="nav-item"><%= link_to 'About', homes_about_path, class: "btn btn-outline-secondary mx-3" %></li>
              <li class="nav-item"><%= link_to '商品一覧', items_path, class: "btn btn-outline-secondary mx-3" %></li>
              <li class="nav-item"><%= link_to '新規登録', new_customer_registration_path, class: "btn btn-outline-secondary mx-3" %></li>
              <li class="nav-item"><%= link_to 'ログイン', new_customer_session_path, class: "btn btn-outline-secondary mx-3" %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>

    </footer>
  </body>
</html>

