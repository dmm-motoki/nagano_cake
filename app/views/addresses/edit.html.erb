<div class="container">
  <div class="row my-4">
    <h3 class="px-3 bg-light ml-5">配送先編集</h3>
  </div>
  <%= form_with model: @address do |f| %>
    <div class="row">
      <p class="col-md-3 my-auto">郵便番号（ハイフンなし）</p>
      <%= f.text_field :postal_code, class: "form-control col-md-2" %>
    </div>
    <div class="row">
      <p class="col-md-3 my-auto">住所</p>
      <%= f.text_field :address, class: "form-control col-md-6 my-2" %>
    </div>
    <div class="row">
      <p class="col-md-3 my-auto">宛名</p>
      <%= f.text_field :name, class: "form-control col-md-2" %>
      <%= f.submit "変更内容を保存", class: "col-md-2 ml-auto btn btn-success" %>
    </div>
  <% end %>
</div>