<div class="container">
  <div class="row">
    <h2>ショッピングカート</h2>
  </div>
  <div class="row">
    <table class="table table-md">
      <thead class="bg-light">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_items| %>
          <tr>
            <td><%= image_tag cart_items.item.get_image(50,50) %><%= cart_items.item.name %></td>
            <td><%= cart_items.item.taxin_price.floor %></td>
            <td><%= cart_items.amount %></td>
            <td><%= cart_items.item.taxin_price.floor * cart_items.amount %></td>
            <td><%= link_to "削除する", cart_item_path(cart_items.id), method: :delete, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
    <table>
      <tr>
        <th>合計金額</th>
        <th>
          <%= @total.round.to_s(:delimited) %>
        </th>
      </tr>
    </table>
  </div>
  <div class="row">
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
  </div>
</div>