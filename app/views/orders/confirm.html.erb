<div class="container">
  <div class="row">
    <h2>注文情報確認</h2>
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_items| %>
          <tr>
            <td><%= cart_items.item.name %></td>
            <td><%= cart_items.item.taxin_price.floor %></td>
            <td><%= cart_items.amount %></td>
            <td><%= cart_items.amount * cart_items.item.taxin_price.floor %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <table>
      <tr>
        <th>送料</th>
        <th><%= @order.postage %></th>
      </tr>
      <tr>
        <th>商品合計</th>
        <th><%= @cart_items.inject(0) { |sum, item| sum + item.sum_of_price }.floor %></th>
      </tr>
      <tr>
        <th>請求金額</th>
        <th><%= @order.postage + @cart_items.inject(0) { |sum, item| sum + item.sum_of_price }.floor %></th>
      </tr>
    </table>
  </div>
  <div>
    <h2>支払方法</h2>
    <p><%= @order.payment_method_i18n %></p>
  </div>
  <div>
    <h2>お届け先</h2>
    <p><%= @order.postal_code + " " + @order.address %><br><%= @order.name %></p>
  </div>
</div>