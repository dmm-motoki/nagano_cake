<div class="container">
  <div class="row my-5 mx-5">
    <h3 class="bg-light px-4">注文履歴一覧</h3>
  </div>
  <div class="row">
    <table class="table table-md table-bordered">
      <thead class="bg-light">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |orders| %>
          <tr>
            <td><%= orders.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= orders.postal_code %><br>
              <%= orders.address %><br>
              <%= orders.name %>
            </td>
            <td>
              <% orders.order_details.all.each do |order_details| %>
                <ul>
                  <li class="list-unstyled"><%= order_details.item.name %></li>
                </ul>
              <% end %>
            </td>
            <td><%= orders.total_price %>円</td>
            <td><%= link_to "表示する", order_path(orders.id), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>