<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
  <table>
    <tr>
      <th>名前</th>
      <th>
        <%= f.label :（姓） %>
        <%= f.text_field :last_name %>
        <%= f.label :（名） %>
        <%= f.text_field :first_name %>
      </th>
    </tr>
    <tr>
      <th>フリガナ</th>
      <th>
        <%= f.label :（セイ） %>
        <%= f.text_field :last_name_kana %>
        <%= f.label :（メイ） %>
        <%= f.text_field :first_name_kana %>
      </th>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
    </tr>
    <tr>
      <th>郵便番号（ハイフンなし）</th>
      <th><%= f.text_field :postal_code %></th>
    </tr>
    <tr>
      <th>住所</th>
      <th><%= f.text_field :address %></th>
    </tr>
    <tr>
      <th>電話番号（ハイフンなし）</th>
      <th><%= f.text_field :telephone_number %></th>
    </tr>
    <tr>
      <th>パスワード（6文字以上）</th>
      <th>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </th>
    </tr>
    <tr>
      <th>パスワード（確認用）</th>
      <th><%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
    </tr>
    <tr>
      <th></th>
      <th><%= f.submit "新規登録" %></th>
    </tr>
  </table>
<% end %>

<h2>既に登録済みの方</h2>

<p><span><%= link_to "こちら", new_customer_session_path %></span> からログインしてください。</p>
