<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :（姓） %>
    <%= f.text_field :last_name %>
    <%= f.label :（名） %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :（セイ） %>
    <%= f.text_field :last_name_kana %>
    <%= f.label :（メイ） %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <p>メールアドレス</p>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <p>郵便番号（ハイフンなし）</p>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <p>住所</p>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <p>電話番号</p>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>

<p><span><%= link_to "こちら", new_customer_session_path %></span> からログインしてください。</p>
