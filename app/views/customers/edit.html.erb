<div class="container">
  <div class="row">
    <h3>会員情報編集</h3>
  </div>
  <div class="row">
    <%= form_with model: @customer, url: customers_information_path do |f| %>
      <table>
        <tr>
          <th>氏名</th>
          <th><%= f.text_field :last_name %> <%= f.text_field :first_name %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= f.text_field :postal_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= f.text_field :address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= f.text_field :telephone_number %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= f.text_field :email %></th>
        </tr>
        <tr>
          <th></th>
          <th><%= f.submit "編集内容を保存" %></th>
        </tr>
      </table>
    <% end %>
  </div>
</div>
