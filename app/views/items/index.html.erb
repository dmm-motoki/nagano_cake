<div class="container">
  <div class="row">
    <h2>商品一覧</h2>
    <p>(全<%= @items.count %>件)</p>
  </div>
  <div class="row flex-wrap">
    <% @items.each do |items| %>
      <ul class="list-unstyled">
        <li>
          <%= link_to item_path(items.id) do %>
            <div>
              <%= image_tag items.get_image(200,200) %>
              <p><%= items.name %></p>
              <p>￥<%= items.taxin_price.floor %></p>
            </div>
          <% end %>
        </li>
      </ul>
    <% end %>
  </div>
</div>